<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/card_text"
    tools:context="com.example.usrivast.DataShow.ShowTeamsActivity"
    android:id="@+id/ShowTeams">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Group A"
        android:id="@+id/showTeamsGroupATextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupAListView"
        android:layout_below="@+id/showTeamsGroupATextView"
        android:divider="@android:color/transparent"
        android:dividerHeight="12px"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Group B"
        android:layout_alignParentLeft="true"
        android:id="@+id/showTeamsGroupBTextView"
        android:layout_below="@+id/groupAListView"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupBListView"
        android:layout_below="@+id/showTeamsGroupBTextView"
        android:divider="@android:color/transparent"
        android:dividerHeight="12px"
        android:layout_alignParentStart="true" />
</RelativeLayout>
